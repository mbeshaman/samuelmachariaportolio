<script type="text/javascript">
function toggleSidebar(){
  document.getElementById("sidebar").classList.toggle('active');
  
}
let scrollToabout = document.querySelector("#scrolltoabout")
let scrollTocontact = document.querySelector("#scrolltocontact")
let pageAbout = document.querySelector("#page-about")
let pageContact = document.querySelector("#page-contact")
scrollToabout.addEventListener("click", function() {
  pageAbout.scrollIntoView()
})
scrollTocontact.addEventListener("click", function() {
  pageContact.scrollIntoView()
})
</script>

